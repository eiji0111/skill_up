<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class="text-center mt-3 mb-3">Log in</h2>
      <form>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <label for="email">Email</label><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email" %>
        </div>
        <div class="form-group">
          <label for="password">Password</label><br>
          <%= f.password_field :password, autocomplete: "current-password", id:"password" %>
        </div>
        <%= f.submit "Log in", class:"btn btn-primary" %>
        <% end %>
      </form>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
