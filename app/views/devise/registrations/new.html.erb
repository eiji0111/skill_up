<div class="container">
  <div class="row">
    <div class="col-md">
      <h2 class="text-center mt-3 mb-3">Sign up</h2>
      <form>
        <%= form_with model:@user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <label for="name">Name</label><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", id:"name" %>
        </div>
        <div class="form-group">
          <label for="email">Email</label><br>
          <%= f.email_field :email, autocomplete: "email", id:"email" %>
        </div>
        <div class="form-group">
          <label for="password">Password</label><br>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", id:"password" %>
        </div>
        <div class="form-group">
          <label for="password_confirmation">Password_confirmation</label><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"epassword_confirmation" %>
        </div>
        <%= f.submit "Sign up", class:"btn btn-success" %>
        <% end %>
      </form>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
